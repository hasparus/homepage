{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    // "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "allowJs": true,
    "plugins": [
      // {
      //   "name": "@astrojs/ts-plugin"
      // },
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "include": ["*.ts", "api", "scripts", "src", "test", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
